<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <Zookal_Mock>
            <version>1.0.0</version>
        </Zookal_Mock>
    </modules>

    <global>
        <helpers>
            <zookal_mock>
                <class>Zookal_Mock_Helper</class>
            </zookal_mock>
        </helpers>
        <models>
            <zookal_mock>
                <class>Zookal_Mock_Model</class>
            </zookal_mock>
            <!--
            Example rewrite when Mage_Shipping is disabled and/or files are removed.
            Add this rewrite xml somewhere into your config.xml files.
            <catalog>
                <rewrite>
                    <product>Zookal_Mock_Model_Catalog_Model_Product</product>
                </rewrite>
            </catalog>
            -->
        </models>
        <blocks>
            <zookal_mock>
                <class>Zookal_Mock_Block</class>
            </zookal_mock>
        </blocks>
        <events>
            <controller_front_init_before>
                <observers>
                    <zookal_mock_create_mock>
                        <class>zookal_mock/observer</class>
                        <method>mockDisabledModules</method>
                    </zookal_mock_create_mock>
                </observers>
            </controller_front_init_before>
        </events>
    </global>
    <frontend>
        <events>
            <controller_action_layout_load_before>
                <observers>
                    <zookal_mock_payment_disabled>
                        <class>zookal_mock/observer</class>
                        <method>paymentCheckoutLayoutUpdate</method>
                    </zookal_mock_payment_disabled>
                </observers>
            </controller_action_layout_load_before>

            <controller_action_postdispatch_checkout_onepage_saveShippingMethod>
                <observers>
                    <zookal_mock_payment_disabled>
                        <class>zookal_mock/observerController</class>
                        <method>afterSaveShippingMethod</method>
                    </zookal_mock_payment_disabled>
                </observers>
            </controller_action_postdispatch_checkout_onepage_saveShippingMethod>
        </events>
        <layout>
            <updates>
                <zookal_mock>
                    <file>zookal_mock.xml</file>
                </zookal_mock>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <Mage_Cms>
                    <files>
                        <default>Zookal_Mock.csv</default>
                    </files>
                </Mage_Cms>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <dev>
            <zookalmock>
                <enable_method_log>0</enable_method_log>
            </zookalmock>
        </dev>
    </default>
    <phpunit>
        <suite>
            <modules>
                <Zookal_Mock/>
            </modules>
        </suite>
    </phpunit>
</config>
